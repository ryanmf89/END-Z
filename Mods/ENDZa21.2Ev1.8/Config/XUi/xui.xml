<configs>
<!--ENEMY HEALTH BAR -->
<append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
	<window name="windowTargetBar" anchor="CenterTop" />
</append>
	
<!--working work stations-->
<append xpath="/xui/ruleset">
<window_group name="workstation_cntWallOvenWorking" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
	<window name="windowCraftingList"/>
	<window name="craftingInfoPanel"/>
	<window name="windowCraftingQueue"/>
	<window name="windowToolsCampfire" />
	<window name="windowFuel" />
	<window name="windowOutput" />
	<window name="windowNonPagingHeader" />
</window_group>
		
<window_group name="workstation_cntGasGrillWorking" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
	<window name="windowCraftingList"/>
	<window name="craftingInfoPanel"/>
	<window name="windowCraftingQueue"/>
	<window name="windowToolsCampfire" />
	<window name="windowFuel" />
	<window name="windowOutput" />
	<window name="windowNonPagingHeader" />
</window_group>

<window_group name="workstation_cntCharcoalGrillWorking" controller="XUiC_WorkstationWindowGroup" open_backpack_on_open="true" close_compass_on_open="true">
	<window name="windowCraftingList"/>
	<window name="craftingInfoPanel"/>
	<window name="windowCraftingQueue"/>
	<window name="windowToolsCampfire" />
	<window name="windowFuel" />
	<window name="windowOutput" />
	<window name="windowNonPagingHeader" />
</window_group>
</append>

<!--REMOVES INPUT WINDOW FOR THE FORGE-->
<remove xpath="/xui/ruleset/window_group[@name='workstation_forge']/window[@name='windowForgeInput']"></remove>

<!--ESCAPE WINDOW INFO-->
<append xpath="/xui/ruleset">
<window_group name="serverinfowindow">
	<window name="serverinfowindow" />
</window_group>
</append>
<!--END OF ESCAPE WINDOW INFO-->
</configs>