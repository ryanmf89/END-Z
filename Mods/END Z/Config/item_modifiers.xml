<configs>

<!--HAZMAT MODS FOR ARMOR-->
<append xpath="/item_modifiers">
<item_modifier name="modRadiationReadyhatLL" installable_tags="head" modifier_tags="resistance" blocked_tags="noMods" type="attachment">
	<property name="CustomIcon" value="apparelHazmatMask" />
	<property name="Material" value="MresourceHazmatFiberLL"/>
	<property name="Extends" value="modGeneralMaster"/>
	<property name="CreativeMode" value="Player"/>
	<effect_group tiered="false">
	<passive_effect name="ElementalDamageResist" operation="perc_add" value=".2" tags="radiation"/>
</effect_group>
	<effect_group tiered="false">
	<triggered_effect trigger="onSelfEquipStart" action="AddBuff" target="self" buff="buffRadSuitMask"/>
	<triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" target="self" buff="buffRadSuitMask"/>
	<triggered_effect trigger="onSelfEquipStop" action="RemoveBuff" target="self" buff="buffRadSuit"/>
</effect_group>
</item_modifier>
	
